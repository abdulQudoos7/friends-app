<div class="container">
  <h1 class="text-center mt-4">Admin Dashboard</h1>
  <h3 class="text-center mt-3">Users</h3>
  <%= render "admin/nav_links" %>
  <table class="table table-dark table-hover mt-5">
    <thead>
      <tr>
        <th>User ID</th>
        <th>User Email</th>
        <th>User Role</th>
        <th>Action</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.email%></td>
          <td><%= user.role %></td>
          <td><%= link_to "Edit", edit_admin_user_path(id: user.id), class: "btn btn-outline-warning" %> </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
