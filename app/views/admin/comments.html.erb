<div class="container">
  <h1 class="text-center mt-4">Admin Dashboard</h1>
  <h3 class="text-center mt-3">Comments</h3>
  <%= render "admin/nav_links" %>
  <div class="mt-5">
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Comment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.commenter %></td>
            <td><%= comment.body %></td>
            <td><%= link_to "delete", [comment.friend, comment], data:
    {
        turbo_method: :delete,
        turbo_confirm: "Do you want to delete this comment"
    }, class: "btn btn-danger" %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
