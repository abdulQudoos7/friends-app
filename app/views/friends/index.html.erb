<p style="color: green"><%= notice %></p>
<div class="row d-flex">
  <h1>Friends</h1>
  <div class="d-flex">
  <%= form_tag(friends_path, method: :get) do %>
    <%= text_field_tag :search, @search_term, placeholder: "Search ...", class: "form-control" %>
    <%= submit_tag "Search", class: "btn btn-dark mt-3" %>
  <% end %>
  </div>
</div>
<div class="row mt-3">
  <div id="friends">
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @friends.each do |friend| %>
        <tbody>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.email %></td>
            <td><%= friend.address %></td>
            <td><%= link_to "Show this friend", friend, class: "btn btn-outline-light" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
<div class="pagination justify-content-center"><%= paginate @friends, left: 1, right: 3 %></div>

