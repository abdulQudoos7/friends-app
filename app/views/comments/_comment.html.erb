<h2>Comments</h2>
<%# if @comment.present? %>

    <% @friend.comments.each do |comment| %>
    
        <% if user_signed_in? %>
        <p>
        <strong>User :</strong>
        <%= comment.commenter %>
        </p>
        <p>
        <strong>Comment :</strong>
        <%= comment.body %>
        </p>
        <p>
        <% if current_user.id == @friend.user_id || current_user.admin? %>
        <%= link_to "delete", [comment.friend, comment], data:
            {
                turbo_method: :delete,
                turbo_confirm: "Do you want to delete this comment"
            }, class: "btn btn-danger" %>
        </p>
        <%end%>
        <%end%>
    <%end%>
<%#end%>