<h2>Comments</h2>
<% @friend.comments.each do |comment| %>
    <p>
    <strong>User :</strong>
    <%= comment.friend.user_id = current_user.email %>
    </p>
    <p>
    <strong>Comment :</strong>
    <%= comment.body %>
    </p>
    <p>
    <%= link_to "delete", [comment.friend, comment], data:
    {
        turbo_method: :delete,
        turbo_confirm: "Do you want to delete this comment"
    }, class: "btn btn-danger" %>
    </p>
<%end%>
